<?xml version='1.0' encoding='utf-8'?>
<!--
  Managed by Chef - local modifications will be overwritten
-->
<Server port="<%= @tomcat_shutdown_port %>" shutdown="SHUTDOWN">
    <Service name="Tomcat-Standalone">
        <Connector port="<%= @tomcat_port %>"
                   protocol="HTTP/1.1"
                   maxThreads="<%= @tomcat_max_threads %>"
                   acceptCount="<%= @tomcat_accept_count %>"
                   connectionTimeout="20000"
                   URIEncoding="UTF-8"
                   compression="on"
                   compressibleMimeType="text/html,text/xml,text/plain,text/css,application/json,application/javascript,application/x-javascript"
<% if @tomcat_proxy_name -%>
                   proxyName="<%= @tomcat_proxy_name %>"
<% end -%>
<% if @tomcat_proxy_port -%>
                   proxyPort="<%= @tomcat_proxy_port %>"
<% end -%>
                   scheme="<%= @tomcat_scheme %>"
                   secure="<%= @tomcat_secure %>"
                   redirectPort="8443"
        />

        <Engine name="Standalone" defaultHost="localhost">
            <Host name="localhost" appBase="webapps" unpackWARs="true" autoDeploy="false">
                <Context path="" docBase="../confluence" reloadable="false" useHttpOnly="true">
                    <Manager pathname="" />
                </Context>
            </Host>
        </Engine>
    </Service>
</Server>
